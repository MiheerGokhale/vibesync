generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id String @id  @default(cuid())
  firstName String
  lastName String
  email String @unique
  password String

  accounts SpotifyAccount[]

  @@index([email])
}

model SpotifyAccount {
  id String @id @default(cuid())
  userId String

  emailAddress String 
  provider String
  image String
  access_token String @unique
  token_type String
  refresh_token String
  
  playlist Playlist[]
  user User @relation(fields: [userId],references: [id],onDelete: Cascade)

  @@index([emailAddress])
  @@index([userId])
}

model Playlist{
  id String @id @default(cuid())
  accountId String
  name String @unique
  date DateTime
  tracks Track[]
  account SpotifyAccount @relation(fields: [accountId],references: [id],onDelete: Cascade)

  @@index([accountId])
  @@index([date])
}

model Track{
  id String @id @default(cuid())
  playlistId String

  name String
  uri String
  image String

  playlist Playlist @relation(fields: [playlistId],references: [id],onDelete: Cascade)

  @@index([playlistId])
  @@index([name])
}